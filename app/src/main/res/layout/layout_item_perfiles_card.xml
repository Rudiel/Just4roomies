<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="300dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/perfil_card_imagen">

            <ImageView
                android:id="@+id/ivImagen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@android:color/darker_gray" />

            <ImageView
                android:id="@+id/ivIconMap"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@id/ivImagen"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_perfiles_distancia" />

            <TextView
                android:id="@+id/tvDistancia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/ivImagen"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/ivIconMap"
                android:textColor="@android:color/white"
                android:textSize="@dimen/perfil_card_textoSobreMi" />"

            <ImageView
                android:id="@+id/ivPuntosPerfilCard"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@id/ivImagen"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/tvPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/ivImagen"
                android:layout_alignRight="@id/ivImagen"
                android:layout_margin="10dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/perfil_card_textoSobreMi" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_above="@id/ivIconMap"
                android:layout_marginBottom="10dp"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/view"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/white" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:background="@drawable/background_conexion"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/ivConexion"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_ultimaconexion" />

                <TextView
                    android:id="@+id/tvConexion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/ivConexion"
                    android:text="2 Dias"
                    android:textColor="@color/naranja_degradado" />
            </RelativeLayout>

            <ProgressBar
                android:id="@+id/pbPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivMascota"
                android:layout_width="@dimen/perfil_card_personalidad"
                android:layout_height="@dimen/perfil_card_personalidad"
                android:layout_marginRight="5dp"
                android:src="@drawable/cocina_false_incial" />

            <ImageView
                android:id="@+id/ivFumas"
                android:layout_width="@dimen/perfil_card_personalidad"
                android:layout_height="@dimen/perfil_card_personalidad"
                android:layout_marginRight="5dp"
                android:src="@drawable/cocina_false_incial" />

            <ImageView
                android:id="@+id/ivEstudias"
                android:layout_width="@dimen/perfil_card_personalidad"
                android:layout_height="@dimen/perfil_card_personalidad"
                android:layout_marginRight="5dp"
                android:src="@drawable/cocina_false_incial" />

            <ImageView
                android:id="@+id/ivNacionalidad"
                android:layout_width="@dimen/perfil_card_personalidad"
                android:layout_height="@dimen/perfil_card_personalidad"
                android:layout_marginRight="5dp"
                android:src="@drawable/mx" />

            <ImageView
                android:id="@+id/ivActivo"
                android:layout_width="@dimen/perfil_card_personalidad"
                android:layout_height="@dimen/perfil_card_personalidad"
                android:src="@drawable/cocina_false_incial" />

            <ImageView
                android:id="@+id/ivCocinas"
                android:layout_width="@dimen/perfil_card_personalidad"
                android:layout_height="@dimen/perfil_card_personalidad"
                android:layout_marginLeft="5dp"
                android:src="@drawable/cocina_false_incial" />

            <ImageView
                android:id="@+id/ivFiestero"
                android:layout_width="@dimen/perfil_card_personalidad"
                android:layout_height="@dimen/perfil_card_personalidad"
                android:layout_marginLeft="5dp"
                android:src="@drawable/cocina_false_incial" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivIconoSobreMi"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_sobremi" />

            <TextView
                android:id="@+id/tvSobreMiTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/ivIconoSobreMi"
                android:text="@string/sobremi_perfil"
                android:textColor="@color/naranja_degradado"
                android:textSize="@dimen/perfil_card_textoSobreMi" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tvSobremi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:maxLines="@integer/perfil_descripcion"
            android:textSize="@dimen/perfil_card_textoSobreMi" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/left_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_rechazado" />

        <ImageView
            android:id="@+id/right_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_aceptado" />
    </RelativeLayout>

</android.support.v7.widget.CardView>